<!DOCTYPE html><!-- EN USO PERO FALTA MODIFICARLO-->
<html lang="es">
<link rel="stylesheet" type="text/css" href="/css/stylesDetail.css" />
<!-- Include Head -->
<%- include('partials/head', {title: 'Todos los productos' }) %>

	<body>
		<!-- Header -->
		<%- include('partials/header') %>
			<!-- /Header -->

			<!-- todos los productos -->

			<div>
				<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Categor√≠a: <%=category%></h2>
					</div>

					    

					<% products.forEach(function(product){ if (product.category == category){ %>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/products/<%= product.id %>">
									<figure class="product-box_image">
										<img src="/img/products/<%= product.image %>" alt="imagen de producto" style="max-width: 100%";>
									</figure>
									<article class="product-box_data">
										<div>
											
											 <%= product.name %> 
											<br>
											<div> $ <%= product.price %></div>	
										</div>
					
									</article>
								</a>
							</section>
						</div>
						<% }}) %>

				</div>
			</div>


			<!-- /todos los productos -->

			<!-- footer -->
			<%- include('partials/footer') %>
				<!-- /footer -->
	</body>

</html>