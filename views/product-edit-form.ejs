<!DOCTYPE html>
<!--EN USO-->
<html lang="en">
  <link href="/css/stylesProductCreate.css" rel="stylesheet" type="text/css">
  <%- include("./partials/head") %>

  <body>
      <%- include("./partials/header") %>
      <main>
      
        <div class="caja-form">
          <h2 class="titulo">Editar publicacion de producto</h2>
          
          <%- include("./partials/valProdCreate") %> 
               
          <div class= "errores">
            <ul id="nameErrors"></ul>
            <ul id="descriptionErrors"></ul>
            <ul id="colorErrors"></ul>
            <ul id="priceErrors"></ul>
            <ul id="imageErrors"></ul>
          </div>

          <form action="/products/edit/<%= productToEdit.id %>?_method=PATCH" method="POST" enctype="multipart/form-data" id="form2">
          
            <div class="campos">
              <label for="nombreProduct" class="smallHeader"> Nombre</label>
              <input type="text" name="name" id="name" value="<%= productToEdit.name %>">
            </div>

            <div class="campos">
              <label for="description" class="smallHeader"> Descripcion</label>
              <input type="text" name="description" id="description" value="<%= productToEdit.description %>" />
            </div>

            <div class="campos">
              <label for="imageProduct" id="image" class="smallHeader">Imagen</label><input type="file" name="image"
                accept="jpg, jpeg" multiple />
            </div>
          
            <h6>Categoria Actual</h6>
            <p>
              <%= productToEdit.category %>
            </p>
            <div class="campos">
              <label for="categoryProduct" class="smallHeader"></label>
              <select name="category_id" id="">
                <% categories.forEach(category=> { %>
                  <option value=<%=category.id %> > <%=category.name%>
                  </option>
                <% })%>
              </select>
            </div>

            <div class="campos">
              <label for="precioProduct" class="smallHeader"> Precio</label>
              <input type="number" name="price" id="price" value=<%=productToEdit.price %> >
            </div>

            <div class="campos">
              <label for="description" class="smallHeader"> Color</label>
              <input type="text" name="color" id="color" value=<%=productToEdit.color %>>
            </div>

            <div class="campos">
              <button type="submit" class="crear">Guardar Cambios</button>
            </div>

          </form>

        </div>

        <%- include("./partials/footer") %>

      </main>

  </body>

</html>