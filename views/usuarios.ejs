<!DOCTYPE html> <!-- EN USO-->
<html lang="en">
<link rel="stylesheet" type="text/css" href="/css/stylesDetail.css" />
<!-- Head -->

<%- include("./partials/head") %>

    <!-- Head -->

    <body>
        <!-- Header -->

        <%- include("./partials/header") %>

            <hr>
            <main>

                			
<br>
<div class="container admin">
    <h2>Bienvenido <%=locals.userLogged.name%></h2> <br>
    <h2 class="botonuno"> <a href="/products/create" style="color: white;">  Cargar producto </a></h2>
    <h2 class="botonuno"> <a href="/products" style="color: white;"> Ver todos los productos </a></h2>
    <h2 class="botonuno"> <a href="/users" style="color: white;"> Ver usuarios </a></h2>
  </div>

<br>

                <div class="container products-wrapper">
                    <div class="row">
                        <div class="col-12">
                            <h2>Listado de usuarios registrados</h2>
                        </div>

                        <% users.forEach(function(user){ %>
                            <div class="col-12 col-sm-6 col-lg-3">
                                <section class="product-box">
                                    <a href="/users/<%= user.id %>">
                                        <figure class="product-box_image">
                                            <img src="/img/usuarios/<%= user.avatar %>" alt="imagen de usuario"
                                                style="max-width: 100%" ;>
                                        </figure>
                                        <h2>
                                            <%= user.name %>
                                        </h2>
                                    </a>
                                </section>
                            </div>
                            <% }) %>

                    </div>
                </div>


            </main>
            <hr>
            <!-- footer -->
            <%- include('partials/footer') %>
                <!-- /footer -->
    </body>

</html>